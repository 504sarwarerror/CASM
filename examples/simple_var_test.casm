%extern stdio.h

; Test variable sharing between CASM and C code
%var number 42
%var result 0
%var multiplier 3

%println "=== Variable Sharing Test ==="
%println "Initial values: number=42, multiplier=3"

; C code can access CASM variables
%! printf("C sees number=%d, multiplier=%d\n", var_number, var_multiplier); var_result = var_number * var_multiplier; printf("C calculated result=%d\n", var_result);

%println "Back in CASM - checking result from C:"

; Test the result calculated by C
%if result > 100
    %println "Result > 100! C calculation worked!"
%else  
    %println "Result <= 100"
%endif

%println "Final result:"
%println result